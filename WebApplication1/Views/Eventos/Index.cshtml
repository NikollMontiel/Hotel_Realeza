@model IEnumerable<WebApplication1.Models.Eventos>

@{
    ViewBag.Title = "Index";
}

<h2>Eventos especiales</h2>

<p>
    @Html.ActionLink("Registrar evento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha de evento
        </th>
        <th>
            Cliente
        </th>
        <th>
            Tipo de evento
        </th>
        <th>
            Costo de evento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clientes.PNC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Evento.Tipo_Evento1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Costo_Evento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID_Evento }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Evento }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Evento })
        </td>
    </tr>
}

</table>
